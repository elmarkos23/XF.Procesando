<?xml version="1.0" encoding="utf-8" ?>
<popup:PopupPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:popup="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF.Procesando.Procesando"
            InputTransparent="False"
            HasSystemPadding="True"
            CloseWhenBackgroundIsClicked="False"
            Padding="20,100">
    <StackLayout Padding="10" BackgroundColor="WhiteSmoke" Orientation="Horizontal" VerticalOptions="Center" HorizontalOptions="Center">
        <ActivityIndicator x:Name="IndicadorGeneral" 
                                   HorizontalOptions="Start" 
                                   VerticalOptions="Center"                        
                                    IsRunning="True" 
                                   IsEnabled="True" />
        <Label Text="Cargando..." HorizontalOptions="FillAndExpand" VerticalOptions="Center"/>

    </StackLayout>
</popup:PopupPage>